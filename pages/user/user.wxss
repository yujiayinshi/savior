.avatarContainer {
  background-color: blanchedalmond; 
}

.avatarView {
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 50rpx;
}

.nickName {
  margin-top: 20rpx;
  text-align: center;
  color: #333;
}

.points {
  margin-top: 20rpx;
  text-align: center;
  color: #444;
  font-weight: bold;
}

.exchangeTitle {
  font-size: 48rpx;
  padding: 20rpx 0;
  color: #444;
  font-weight: bold;
}

.productList {
  background: #eee;
  margin-bottom: 50rpx;
}

.product {
  display: flex;
  flex-direction: column;
}

.product image {
  width: 100%;
  height: 300rpx;
}

.productInfo {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.productName {
  color: #444;
}

.productPrice {
  color: #333
}

.exchangeButton {
  background-color: bisque;
}
